						android:text=""
						style="@style/NutritionText"
						android:layout_marginRight="2dp"
						android:layout_toLeftOf="@+id/iron_units"
						android:layout_alignBottom="@+id/iron_units"/>
				</RelativeLayout>
				
			</FrameLayout>
		</RelativeLayout>
	</TabHost>
</RelativeLayout>